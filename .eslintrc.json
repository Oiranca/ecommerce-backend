{
  "env": {
    "browser": true,
    "es2021": true,
    "es6": true,
    "mongo": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ]
  },
  "extends": "eslint:recommended"
}
